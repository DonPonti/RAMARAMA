  tabVoice.setAttribute('aria-selected', String(!isType));

  tabType.className  = isType
    ? 'tab-btn flex-1 flex items-center justify-center gap-2 py-2 px-3 rounded-lg text-sm font-body font-semibold transition-all bg-white dark:bg-gray-700 text-saffron-700 dark:text-saffron-300 shadow-sm'
