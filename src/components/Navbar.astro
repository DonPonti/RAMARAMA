---
const navLinks = [
  { href: '/', label: 'Japa' },
  { href: '/about', label: 'About' },
  { href: '/stories', label: 'Stories' },
];

const currentPath = Astro.url.pathname;
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-spiritual-cream/95 dark:bg-gray-900/95 backdrop-blur-md border-b border-saffron-200 dark:border-saffron-900">
  <div class="max-w-5xl mx-auto px-3 sm:px-4 h-14 flex items-center justify-between gap-2">
    
    <!-- Logo -->
    <a href="/" class="font-display text-saffron-600 dark:text-saffron-400 text-base sm:text-lg tracking-wide hover:text-saffron-700 transition-colors shrink-0">
      ðŸª” Rama Koti
    </a>
    
    <!-- Nav links + theme toggle -->
    <div class="flex items-center gap-0.5 sm:gap-1">
      {navLinks.map(link => (
        <a
          href={link.href}
          class={`px-2.5 sm:px-3 py-2 rounded-lg text-xs sm:text-sm font-body transition-all min-h-[40px] flex items-center ${
            currentPath === link.href
              ? 'bg-saffron-100 dark:bg-saffron-900/40 text-saffron-700 dark:text-saffron-300 font-semibold'
              : 'text-gray-600 dark:text-gray-400 hover:text-saffron-600 dark:hover:text-saffron-400 hover:bg-saffron-50 dark:hover:bg-saffron-900/20'
          }`}
        >
          {link.label}
        </a>
      ))}
      
      <!-- Dark Mode Toggle â€” large tap target for mobile -->
      <button
        id="theme-toggle"
        aria-label="Toggle dark mode"
        class="ml-1 p-2.5 min-h-[40px] min-w-[40px] rounded-lg text-gray-500 dark:text-gray-400 hover:bg-saffron-100 dark:hover:bg-saffron-900/30 transition-colors flex items-center justify-center"
      >
        <svg id="sun-icon" class="w-4 h-4 hidden dark:block" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd"/>
        </svg>
        <svg id="moon-icon" class="w-4 h-4 block dark:hidden" fill="currentColor" viewBox="0 0 20 20">
          <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"/>
        </svg>
      </button>
    </div>
  </div>
</nav>

<script>
  const toggle = document.getElementById('theme-toggle');
  const html = document.documentElement;
  
  // Load saved theme
  const saved = localStorage.getItem('theme');
  if (saved === 'dark' || (!saved && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
    html.classList.add('dark');
  }
  
  toggle?.addEventListener('click', () => {
    html.classList.toggle('dark');
    localStorage.setItem('theme', html.classList.contains('dark') ? 'dark' : 'light');
  });
</script>
